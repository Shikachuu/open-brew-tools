{
  "name": "open-brew-tools",
  "homepage": "https://obt.picloud.hu",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shikachuu/open-brew-tools.git"
  },
  "author": {
    "name": "Máté Czékus",
    "email": "mate@picloud.hu"
  },
  "license": "Apache-2.0",
  "packageManager": "bun@1.1.21",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "vitest",
    "lint": "prettier --write . && eslint . --report-unused-disable-directives --max-warnings 0 --fix"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@nivo/radial-bar": "^0.87.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slider": "^1.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.335.0",
    "next": "14.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "react-router-dom": "^6.26.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.8.2",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.14.14",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "jsdom": "^24.1.1",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 120,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "ignorePatterns": [
      "node_modules",
      ".next",
      "dist",
      "build",
      "out"
    ],
    "rules": {
      "react/prop-types": "off",
      "eslint-comments/no-unlimited-disable": "off",
      "react-refresh/only-export-components": "off"
    }
  }
}
